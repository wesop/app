.q-field {
  position relative;

  .q-field-label-inner.row {
    min-height: auto;
    font-size: .875rem;
    font-weight: 800;
  }

  &[required] {
    .q-field-label-inner.row:after {
      content: '*';
      margin-top: -6px;
      margin-left: 4px;
      color: $em;
    }
  }

  &.text-white {
    .q-field-label-inner.row {
      color: #fff;
    }
  }
}

input.q-input-target {
  height: 1.05em;
}

.q-btn-group {
  border-radius: 0;
}

button.q-btn {
  padding: 12px 0;
  border-radius: 0;
  font-size: 1rem;

  &.q-btn-round {
    border-radius: 50%;
  }
}

body {
  &.q-layout-animate .q-layout-transition {
    transition: none;
  }

  .backdrop-wrap {
    position: fixed;
    top: 0;
    bottom: 100%;
    left: 0;
    right: 0;
    background: rgba(0,0,0,.8);
    z-index: 2001;
  }

  &.use-backdrop {
    overflow: hidden;

    .backdrop-wrap {
      bottom: 0;
    }
  }
}

.modal.minimized, .modal.with-backdrop {
  background: rgba(0,0,0,.8);
}

.q-layout-header {
  user-select none

  .q-toolbar {
    position relative
    padding 0 !important
    min-height 57px !important

    .q-btn {
      position absolute
      top 0
      bottom 0
      padding 4px 8px

      .q-icon {
        font-size 2.25em
      }

      &:first-child {
        left 0
        padding-left 8px

        .q-icon {
          margin-right 0
          margin-left -8px
        }
      }

      &:last-child {
        right 0
        padding-right 8px

        .q-icon {
          margin-left 0
          margin-right -4px
        }

        .q-btn-inner > div + .q-icon {
          margin-right -8px
        }

        .q-btn-inner > div:only-child {
          padding-right 4px
        }
      }
    }
  }
}

.q-layout-footer {
  .q-toolbar {
    padding: 0 !important;
    min-height: 57px !important;

    .q-btn {
      padding: 4px 16px
    }
  }
}

.q-layout-footer.fixed-bottom
  border-top: 0
  box-shadow: 0 -1px 3px $gray

  .q-toolbar
    display flex

    button.q-btn
      flex 1
      display inline-block
      padding 0
      height 42px
      font-size .8rem

      .q-btn-inner
        flex-direction column

        .q-icon
          margin 0 auto
          font-size 1.275rem

    .q-tabs
      width 100%

      .q-tabs-head
        display none

      .q-tabs-panes
        display flex

        .q-tab
          flex 1
          display block
          height 57px

          & > .q-tab-icon
            display block
            margin 4px 0
            text-align center
            transform scale(1)
            font-size 1.5rem

            & + .q-tab-label
              display block
              margin-top 0
              font-size .85rem

          .q-tab-label:only-child
            line-height 34px
            color alpha($blue, 50%)
            opacity 1

.q-tab
  &.active
    background-color: $blue;
    border-bottom: 0;

    .q-icon
      color: #fff;

    .q-tab-label
      transform: scale(1);
      font-weight: 600;
      color: #fff;
      font-size: 1rem;

  .q-tab-label
      font-size: 1rem;

  .q-dot
      display none

.q-item.active
  padding-top 0
  padding-bottom 0
  background-color #fff

.q-item-side
  .q-item-image
    min-width 44px
    max-width 44px
    max-height 44px
    height auto

.modal
  $modal-button-height = 44px;

  user-select: none;

  .modal-content
    border-radius 0
    font-size .9rem

    .layout-padding
      padding-top 0
      padding-bottom 0
      text-align center

    .q-toolbar[slot="footer"]
      padding 0
      height $modal-button-height;
      max-height $modal-button-height;
      min-height $modal-button-height;

      .q-btn-group
        width 100%
        height $modal-button-height;

        & > div
          display flex
          width 100%

        button.q-btn
          flex 1
          padding 0
          margin 0
          border-right 1px solid #fff
          font-size .9rem

          &:last-child
            border-right 0 !important

