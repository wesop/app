/** fullcalendar **/

.fc-view-container {
  .fc-month-view  {
    table {
      width: 100%;

      .fc-head {
        .fc-widget-header {
          border: 0;

          tr {
            th {
              padding: 12px 0;
              font-weight: 600;
              font-size: 1.1rem;
            }
          }
        }
      }

      .fc-body {
        border: 0;

        .fc-widget-content {
          min-height: 44px;
          border: 0;

          .fc-bg {
            display: none
          }

          .fc-content-skeleton {
            thead {
              td {
                padding: 0 0;
                width: 14.28%;
                text-align: center;
                font-size: .9rem;

                &.fc-other-month {
                  color: lighten($gray, 35%);
                }

                span.fc-day-number {
                  display: inline-block;
                  // margin-right: 8px;
                  padding: 0;
                  width: 28px;
                  height: 28px;
                  line-height: 29px;
                  border: 0;
                  border-radius: 50%;
                  box-sizing: border-box;
                  float: none;
                }

                &[class*="today"] {
                  span.fc-day-number {
                    background-color: $paleblue;
                    color: #fff;
                  }
                }

                &.selected {
                  span.fc-day-number {
                    background-color: $em;
                    color: #fff;
                  }
                }

                &.UPDATED {
                  span.fc-day-number {
                    border: 1px solid $em;
                  }
                }
              }
            }
          }
        }
      }

      .fc-sat { color: $primary; }
      .fc-sun { color: $em; }
    }
  }
}

