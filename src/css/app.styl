.field {
  position: relative;
  margin: .7em 0;
  padding-bottom: .5em;
  border-bottom: 1px solid #AACEDD;

  .label {
    position: relative;
    display: inline-block;
    margin-left: 8px;
    margin-bottom: 4px;
    font-size: .9rem;
    font-weight: 800;
  }

  .text {
    margin-left: 8px;

    small {
      font-weight: 400;
      font-size: .5em;
    }

    &+.label {
      margin-top: 1.4em;
    }
  }

  &:first-of-type {
    margin-top: 0;
  }

  &:last-of-type {
    border: 0;
  }

  &:last-child {
    border: 0;
  }

  &.required {
    .label {
      &:after {
        position: absolute;
        top: -3px;
        right: -7px;
        color: #f00;
        content: '*';
      }
    }
  }

  &.hide-underline {
    border-bottom: 0;
  }
}

.btn-more-wrap {
  position: absolute;
  top: 60px;
  right: 12px;
  padding: 0 3px;
  width: auto;
  background: #fff;
  border: 1px solid $blue;
  border-radius: 4px;
  box-sizing: border-box;

  button {
    display: block;
    padding: 0 12px;
    width: 100%;
    background: none;
    border: 0;
    border-bottom: 1px solid #A3B4BE;
    text-align: left;
    line-height: 40px;
    font-size: 1rem;
    outline: none;

    .q-icon {
      margin-top: -2px;
    }

    &:last-child {
      border: 0;
    }
  }
}

.fc-content-skeleton {
  td {
    .status-wrap {
      position: relative;
      height: 5px;

      .ADDED, .WRONG, .LATE, .OVER, .EARLY {
        display: none;
        position: relative;
        top: -5px;
        width: 5px;
        height: 5px;
        border-radius: 50%;
      }

      &.ADDED {
        .ADDED {
          display: inline-block;
          background-color: $secondary;
        }
      }

      &.WRONG {
        .WRONG {
          display: inline-block;
          background-color: #e66a74;
        }
      }

      &.LATE, &.OVER, &.EARLY {
        .LATE, .OVER, .EARLY {
          display: inline-block;
          background-color: #e4a76a;
        }
      }

    }
  }
}

.swal-modal {
  border-radius: 2px;

  .swal-text {
    font-size: 1rem;
    font-weight: 400;
  }

  .swal-footer {
    display: flex;
    padding-left: 0;
    padding-right: 0;
    padding-bottom: 0;

    .swal-button-container {
      flex: 1;
      margin-left: 0;
      margin-right: 0;
      margin-bottom: 0;

      .swal-button {
        width: 100%;
        height: 44px;
        border-radius: 0;

        &.swal-button--confirm {
          background-color: $blue;
        }

        &:focus {
          box-shadow: none;
        }
      }
    }
  }
}

