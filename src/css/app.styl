* {
  &[no-padding] {
    padding: 0 !important;
  }

  &[padding] {
    padding: .5em;
  }

  &[padding-top] {
    padding-top: .5em;
  }

  &[padding-bottom] {
    padding-bottom: .5em;
  }

  &[padding-right] {
    padding-right: .5em;
  }

  &[padding-left] {
    padding-left: .5em;
  }

  &[margin] {
    display: block;
    margin: .5em;
  }

  &[margin-left] {
    display: block;
    margin-left: .5em;
  }
  &[margin-right] {
    display: block;
    margin-right: .5em;
  }
  &[margin-top] {
    display: block;
    margin-top: .5em;
  }
  &[margin-bottom] {
    display: block;
    margin-bottom: .5em;
  }

  &[text-left] {
    text-align: left;
  }

  &[text-center] {
    text-align: center;

    .row {
      .q-input-target {
        justify-content: center;
      }
    }
  }

  &[text-right] {
    text-align: right;

    .row {
      .q-input-target {
        justify-content: flex-end;
      }
    }
  }
}

